@model IEnumerable<Transfer>
@{
    ViewData["Title"] = "Transfers";

    var source = Context.Request.Query["source"].ToString();
    var destination = Context.Request.Query["destination"].ToString();

    var filterColumns = new List<object>();

    if (!string.IsNullOrWhiteSpace(source))
    {
        filterColumns.Add(new {field = "Source.Name", matchCase = false, @operator = "startswith", predicate = "and", value = source});
    }

    if (!string.IsNullOrWhiteSpace(destination))
    {
        filterColumns.Add(new {field = "Destination.Name", matchCase = false, @operator = "startswith", predicate = "and", value = destination});
    }
}

<ejs-grid id="Grid" dataSource="@Model"
          enableHover="false" height="420" width="auto" allowSelection="false"
          toolbar="@(new List<string> {"Search"})" allowTextWrap="true"
          allowPaging="true" allowSorting="true" allowFiltering="true" load="onload">
    <e-grid-pagesettings pageSize="50" pageSizes="@(new[] {"50", "100", "200", "500", "1000", "All"})"></e-grid-pagesettings>
    <e-grid-filtersettings type="Excel" columns="@filterColumns"></e-grid-filtersettings>
    <e-grid-sortsettings columns="@(new[] {new {field = "Date", direction = "Ascending"}})"></e-grid-sortsettings>
    <e-grid-searchsettings fields="@(new[] {"Date", "Type", "Source", "Destination", "Tag", "Note", "Amount"})"></e-grid-searchsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(Transfer.Date)" headerText="Date" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="@nameof(Transfer.Type)" headerText="Type" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="Source.Name" headerText="Source" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="Destination.Name" headerText="Destination" width="100" textAlign="Center"></e-grid-column>
        @* <e-grid-column field="@nameof(Transfer.Description)" headerText="Description" width="200" textAlign="Center"></e-grid-column> *@
        <e-grid-column field="@nameof(Transfer.Amount)" headerText="Amount" width="100" type="number" format="c0" textAlign="Right"></e-grid-column>
        <e-grid-column field="ExchangeRate.Value" headerText="Exchange Rate" width="100" type="number" textAlign="Right"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

@section Scripts{
    <script>
        function onload() {
            this.columns[0].format =
                { type: 'date', format: 'ccc dd MMM yy' };
        }
    </script>
}