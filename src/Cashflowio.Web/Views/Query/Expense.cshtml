@model IEnumerable<Expense>
@{
    var concept = Context.Request.Query["concept"].ToString();
    var destination = Context.Request.Query["destination"].ToString();

    var filterColumns = new List<object>();

    if (!string.IsNullOrWhiteSpace(concept))
    {
        filterColumns.Add(new {field = "Concept.Name", matchCase = false, @operator = "startswith", predicate = "and", value = concept});
    }

    if (!string.IsNullOrWhiteSpace(destination))
    {
        filterColumns.Add(new {field = "Destination.Name", matchCase = false, @operator = "startswith", predicate = "and", value = destination});
    }
}

<ejs-grid id="Grid" dataSource="@Model" locale="es-MX"
          enableHover="false" height="420" width="auto" allowSelection="false"
          toolbar="@(new List<string> {"Search"})" allowTextWrap="true"
          allowPaging="true" allowSorting="true" allowFiltering="true" load="onload">
    <e-grid-pagesettings pageSize="50" pageSizes="@(new[] {"50", "100", "200", "500", "1000", "All"})"></e-grid-pagesettings>
    <e-grid-filtersettings type="Excel" columns="@filterColumns"/>
    <e-grid-sortsettings columns="@(new[] {new {field = "Date", direction = "Ascending"}})"></e-grid-sortsettings>
    <e-grid-searchsettings fields="@(new[] {"Date", "Concept", "Source", "Destination", "Amount"})"></e-grid-searchsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(Expense.Date)" headerText="Fecha" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="Source.Name" headerText="Origen" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="Destination.Name" headerText="Destino" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="Concept.Name" headerText="Concepto" width="100" textAlign="Center"></e-grid-column>
        <e-grid-column field="@nameof(Expense.Description)" headerText="Descripción" width="200" textAlign="Center"></e-grid-column>
        <e-grid-column field="@nameof(Expense.Amount)" headerText="Cantidad" width="100" type="number" format="c0" textAlign="Right"></e-grid-column>
        <e-grid-column field="@nameof(Expense.Currency)" headerText="Moneda" textAlign="Right" width="100"></e-grid-column>
        <e-grid-column field="ExchangeRate.Value" headerText="Tipo de cambio" width="100" type="number" textAlign="Right"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

@section Scripts{
    <script>
        function onload() {
            this.columns[0].format =
                { type: 'date', format: 'ccc dd MMM yy' };
        }
    </script>
}