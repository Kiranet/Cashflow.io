@using Cashflowio.Core.Entities
@model IEnumerable<Cashflowio.Core.Entities.RawTransaction>
@{
    ViewData["Title"] = "Raw Transaction List";
}

<ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowFiltering="true" load="onload">
    <e-grid-pagesettings pageSize="50"></e-grid-pagesettings>
    <e-grid-filtersettings type="Excel"></e-grid-filtersettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(RawTransaction.Date)" headerText="Date" width="100"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Type)" headerText="Date" width="100"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Source)" headerText="Source" width="100"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Destination)" headerText="Source" width="100"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Tag)" headerText="Tag" width="100"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Note)" headerText="Note" width="200"></e-grid-column>
        <e-grid-column field="@nameof(RawTransaction.Amount)" headerText="Amount" width="100" type="number" format="c0"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

@section Scripts{
    <script>
        function onload(args) {
            this.columns[0].format =
                { type: 'date', format: 'dd-MM-yyyy' };
        }
    </script>
}